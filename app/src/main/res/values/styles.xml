<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tictactoe6_AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="TileButton">
        <item name="android:layout_width">@dimen/tictactoe6_tile_size</item>
        <item name="android:layout_height">@dimen/tictactoe6_tile_size</item>
        <item name="android:layout_margin">@dimen/tictactoe6_tile_margin</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">@dimen/tictactoe6_tile_padding</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/tile</item>
    </style>

</resources>
